{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2021",
    "typeRoots": [
      "node_modules/@types",
      "./src/types",
      "./src/apps/*/types"
    ]
  },
  "include": [
    "src/**/*",
    "bin/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
